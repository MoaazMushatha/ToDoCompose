<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoCompose" parent="android:Theme.Material.Light.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="android:colorPrimary">@color/purple_500</item>
        <item name="android:colorPrimaryDark">@color/purple_700</item>
        <item name="android:colorAccent">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="android:colorSecondary" tools:targetApi="n_mr1">@color/teal_200</item>
        <item name="android:textColorSecondaryNoDisable" tools:targetApi="n_mr1">@color/teal_700</item>
        <item name="android:colorMultiSelectHighlight">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/purple_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ToDoCompose.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.ToDoCompose.AppBarOverlay" parent="android:ThemeOverlay.Material.Dark.ActionBar" />

    <style name="Theme.ToDoCompose.PopupOverlay" parent="android:ThemeOverlay.Material.Light" />
</resources>